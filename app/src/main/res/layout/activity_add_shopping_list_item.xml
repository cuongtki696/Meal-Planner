<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/shopping_list_item_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/shopping_list_item_quantity_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantity"
        android:inputType="number" />

    <EditText
        android:id="@+id/shopping_list_item_unit_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Unit (e.g., kg, lbs)"
        android:inputType="text" />

    <Button
        android:id="@+id/button_add_shopping_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to Shopping List" />

</LinearLayout>
