<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:title="@string/storage_title" />

    <!-- RecyclerView and Empty View -->
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical">
        <!-- Empty message if no storage items -->
    <TextView
    android:id="@+id/tv_empty_storage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="16dp"
    android:text="@string/storage_list_empty"
    android:textSize="18sp"
    android:visibility="gone" />

<!-- RecyclerView to display storage items -->
    <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rv_storage_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    tools:itemCount="10"
    tools:listitem="@layout/item_storage" />

</LinearLayout>

    <!-- Buttons for Update and Remove -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <com.google.android.material.button.MaterialButton
    android:id="@+id/btn_update_storage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:text="@string/update" />

    <com.google.android.material.button.MaterialButton
    android:id="@+id/btn_remove_storage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:text="@string/remove" />
    </LinearLayout>

</LinearLayout>
