<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Navigation Bar -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FF6200EE">

        <!-- Home Button -->
        <Button
            android:id="@+id/button_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="#FFFFFF"
            android:background="#FF3700B3" />

        <!-- Storage Button -->
        <Button
            android:id="@+id/button_storage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Storage"
            android:textColor="#FFFFFF"
            android:background="#FF3700B3" />

        <!-- Shopping List Button -->
        <Button
            android:id="@+id/button_shopping_list"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Shopping List"
            android:textColor="#FFFFFF"
            android:background="#FF3700B3" />
    </LinearLayout>

    <!-- TextView for the "Shopping List Empty" message (You can modify this) -->
    <TextView
        android:id="@+id/shopping_list_empty_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopping List Empty"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:padding="16dp" />

    <!-- RecyclerView for displaying the shopping list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shopping_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
